<div class="container d-flex justify-content-center align-items-center mb-5">
    <div class="row">
      <div class="col-md-12">
        <div class="card shadow">`
          <div class="card-body">
            <h5 class="card-title" style="text-align: center; font-weight: bolder;">Enter Your Info:</h5>
            <form
              action="/login"
              method="POST"
              class="validated-form"
              novalidate
              id="login-form"
            >
              <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input
                  class="form-control"
                  type="text"
                  id="username"
                  name="username"
                  autofocus
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>

              <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input
                  class="form-control"
                  type="password"
                  id="password"
                  name="password"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <button class="btn btn-success block">Login</button>
            </form>
          </div>
        </div>
      </div>
      <p class="text-success bg-dark py-3 fw-bolder fs-5">
        Don't have an account?
        <a href="/register" class="text-info">click here</a>
      </p>
    </div>
  </div>

