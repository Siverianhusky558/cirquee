<% layout("layouts/boilerplate") %>

<div class="container d-flex justify-content-center align-items-center mb-5">
    <div class="row">
      <div class="col-md-12">
        <div class="card shadow">
          <img
            src="https://images.unsplash.com/photo-1529539795054-3c162aab037a?ixid=MnwxMjA3fDB8MHxzZWFyY2h8MXx8bG9naW58ZW58MHx8MHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=60"
            alt=""
            class="card-img-top"
          />
          <div class="card-body">
            <h5 class="card-title">Login</h5>
            <form
              action="/login"
              method="POST"
              class="validated-form"
              novalidate
            >
              <div class="mb-3">
                <label class="form-label" for="username">Username</label>
                <input
                  class="form-control"
                  type="text"
                  id="username"
                  name="username"
                  autofocus
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>

              <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input
                  class="form-control"
                  type="password"
                  id="password"
                  name="password"
                  required
                />
                <div class="valid-feedback">Looks good!</div>
              </div>
              <button class="btn btn-success block">Login</button>
            </form>
          </div>
        </div>
      </div>
      <p class="text-success bg-dark py-3 fw-bolder fs-5">
        Don't have an account?
        <a href="/register" class="text-info">click here</a>
      </p>
    </div>
  </div>

