<% layout('layouts/boilerplate') %>

<h1>Your Lovely Notifications</h1>

<ul>
  <% allNotifications.forEach(function(notification) { %>
  <li>
    <a id="notif-link" href="/posts/<%= notification.postId %>">
      <img
        src="<%= notification.avatar[0].url %>"
        alt="User Profile Photo"
        style="width: 40px; height: 40px; border-radius: 50%"
      />
      created a new post!
      <small id="notif-time" class="text-muted"
        ><%= moment(notification.createdAt).fromNow() %>
      </small>
    </a>
    <form
      method="POST"
      action="/notifications/<%= notification._id %>?_method=DELETE"
      class="d-inline"
    >
      <button type="submit" style="background: none; border: 0">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="red"
          class="bi bi-trash3-fill"
          viewBox="0 0 16 16"
        >
          <path
            d="M11 1.5v1h3.5a.5.5 0 0 1 0 1h-.538l-.853 10.66A2 2 0 0 1 11.115 16h-6.23a2 2 0 0 1-1.994-1.84L2.038 3.5H1.5a.5.5 0 0 1 0-1H5v-1A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5Zm-5 0v1h4v-1a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5ZM4.5 5.029l.5 8.5a.5.5 0 1 0 .998-.06l-.5-8.5a.5.5 0 1 0-.998.06Zm6.53-.528a.5.5 0 0 0-.528.47l-.5 8.5a.5.5 0 0 0 .998.058l.5-8.5a.5.5 0 0 0-.47-.528ZM8 4.5a.5.5 0 0 0-.5.5v8.5a.5.5 0 0 0 1 0V5a.5.5 0 0 0-.5-.5Z"
          />
        </svg>
      </button>
    </form>
  </li>
  <% }); %>
</ul>
