<% layout("layouts/boilerplate") %> 
<a class="btn btn-sm btn-danger" href="/suggestions/new">Add a suggestion</a>
<% if(suggestions[0]) { %> 
<div class="mt-5">
        <% for(let suggestion of suggestions) { %>
            <div class="container-fluid mb-3" style="box-shadow: 2px 2px 10px rgba(255, 255, 0, 0.7);">
                <% if(currentUser && currentUser.isReviewer) { %> 
            <form class="d-inline" action="/suggestions/<%= suggestion._id %>?_method=DELETE" method="POST">
                <button style="float:right; border:none; background-color: transparent;">&times;</button>
            </form>
            <% } %> 
            <% if(suggestion.usage == "feature") { %> 
            <h3><%= suggestion.author.username %> suggests:</h3>
            <% } else { %>
                    <h3><%= suggestion.author.username %> reports:</h3>
                <% } %>  
            <p><%= suggestion.body %> </p>
            <p><%= moment(suggestion.createdAt).fromNow() %> </p>
        </div>
    </div>
            <% } %>  
<% } else { %> 
    <h1 style="text-align: center; margin-top: 60px;" class="text-muted">Nothing Yet :(</h1>
    <% } %> 